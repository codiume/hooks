{
  "name": "@codiume/hooks",
  "version": "0.0.1-alpha.2",
  "description": "A collection of reusable react hooks for state and UI management",
  "author": "MHD <m@codiume.com>",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest test",
    "lint": "biome lint --write .",
    "format": "biome format --write .",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "changeset publish",
    "release": "pnpm run build && pnpm run publish"
  },
  "keywords": ["hooks", "library", "react", "react-hooks", "state"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codiume/hooks.git"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@testing-library/react": "^16.0.0",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/react": "^18.3.3",
    "@vitejs/plugin-react": "^4.3.1",
    "jsdom": "^24.1.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
